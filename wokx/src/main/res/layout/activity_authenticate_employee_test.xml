<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

  <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Use dialog Theme"
            android:id="@+id/checkBox"
      />

    <TextView
        android:text="Press this button to Authenticate any employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="Any Employee"
      android:id="@+id/btn_any"
      />

  <TextView
      android:text="Press this button to Authenticate employee: "
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_employee"/>

  <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="Current Employee"
      android:id="@+id/btn_active"
      />


  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:id="@+id/log_text"
      android:paddingTop="@dimen/activity_vertical_margin"/>

</LinearLayout>
